<div class="well">
  <%= simple_form_for(@post, html: { class: "form-horizontal"}) do |f| %>
    <% f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :title, input_html: { rows: "1", :class => "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.input :body, :as => :ckeditor, input_html: { rows: "10", :class => "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.input :tag_list, input_html: { rows: "1", :class => "form-control" }, label: "Tags: (seperated by commas)" %>
      </div>
        <%= f.button :submit, "Submit Post", class: "btn btn-primary" %>
      </div>  
    </div>  
  <% end %>
</div>